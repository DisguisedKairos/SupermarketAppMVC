<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>UnFairPrice - Cart</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-4">
    <div class="page-header mb-3">
      <div>
        <h2 class="mb-1">Your Cart</h2>
        <p class="text-muted mb-0">Review your items before proceeding to payment.</p>
      </div>
      <div>
        <a href="/shopping" class="btn btn-outline-secondary btn-sm">Continue shopping</a>
      </div>
    </div>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg) { %><p class="mb-0"><%= msg %></p><% }); %>
      </div>
    <% } %>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg) { %><p class="mb-0"><%= msg %></p><% }); %>
      </div>
    <% } %>

    <% if (!cart || cart.length === 0) { %>
      <div class="alert alert-info">Your cart is currently empty.</div>
      <a href="/shopping" class="btn btn-primary">Back to Shopping</a>
    <% } else { %>
      <div class="table-responsive mb-3">
        <table class="table table-striped table-hover align-middle bg-white shadow-sm">
          <thead class="table-light">
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th class="text-end">Unit Price</th>
              <th class="text-center" style="width: 140px;">Quantity</th>
              <th class="text-end">Subtotal</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < cart.length; i++) { %>
              <tr>
                <td><strong><%= cart[i].productName %></strong></td>
                <td>
                  <% if (cart[i].image) { %>
                    <img src="/images/<%= cart[i].image %>" alt="<%= cart[i].productName %>" style="width: 70px; height: 70px; object-fit: cover;">
                  <% } else { %><span class="text-muted">No image</span><% } %>
                </td>
                <td class="text-end">$<%= cart[i].price.toFixed(2) %></td>
                <td class="text-center">
                  <form action="/cart/update/<%= cart[i].cartId %>" method="POST" class="d-flex justify-content-center">
                    <input type="number" min="0" name="quantity" value="<%= cart[i].quantity %>" class="form-control form-control-sm me-2" style="width: 80px;">
                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                  </form>
                </td>
                <td class="text-end">$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                <td class="text-center">
                  <form action="/cart/remove/<%= cart[i].cartId %>" method="POST" onsubmit="return confirm('Remove this item?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="row justify-content-end mt-3">
        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Order Summary</h5>
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Items</span>
                <span><%= cart.length %></span>
              </div>
              <hr>
              <div class="d-flex justify-content-between mb-3">
                <span class="fw-semibold">Total</span>
                <span class="fs-4 fw-bold text-success">$<%= total.toFixed(2) %></span>
              </div>
              <form action="/checkout" method="POST">
                <button type="submit" class="btn btn-success w-100 btn-lg">
                  Checkout
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex flex-wrap justify-content-between align-items-center mt-3">
        <form action="/cart/clear" method="POST" onsubmit="return confirm('Clear all items?');">
          <button type="submit" class="btn btn-outline-danger">Clear Cart</button>
        </form>
        <div class="text-end text-muted small">
          Total is also shown in the order summary card.
        </div>
      </div>
    <% } %>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>