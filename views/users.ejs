<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>UnFairPrice - Shop</title>
</head>
<body class="bg-light">
  <%- include('partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-0">Customer Accounts</h2>
        <p class="text-muted mb-0">View and manage all registered users.</p>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Contact</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length) { %>
                <% users.forEach(function(u, index) { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= u.username %></td>
                    <td><%= u.email %></td>
                    <td><%= u.address || '-' %></td>
                    <td><%= u.contact || '-' %></td>
                    <td>
                      <% if (u.role === 'admin') { %>
                        <span class="badge bg-danger">Admin</span>
                      <% } else { %>
                        <span class="badge bg-primary">Customer</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary">
                        Edit role
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center py-4">No users found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
