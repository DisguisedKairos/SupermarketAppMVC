<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>UnFairPrice - Invoice</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-4">
    <div class="page-header mb-3">
      <div>
        <h2 class="mb-1">Invoice</h2>
        <p class="text-muted mb-0">Thank you for shopping with UnFairPrice.</p>
      </div>
      <div>
        <a href="/history" class="btn btn-outline-secondary btn-sm">View all orders</a>
      </div>
    </div>
    <div class="row mb-4 cs-animate" data-animate-delay="1">
      <div class="col-md-6">
        <h5 class="mb-3">Invoice details</h5>
        <% if (typeof paymentMethod !== 'undefined' && paymentMethod) { %>
          <p class="mb-2"><strong>Payment Method:</strong> <%= paymentMethod %></p>
        <% } %>
        <p class="mb-1"><strong>Invoice ID:</strong> <%= header.id %></p>
        <p class="mb-1"><strong>Date:</strong>
          <% const created = header.createdAt instanceof Date ? header.createdAt : new Date(header.createdAt); %>
          <%= created.toLocaleString() %>
        </p>
      </div>
      <div class="col-md-6 text-md-end">
        <h5 class="mb-1">Billed To:</h5>
        <p class="mb-0"><strong><%= user.username %></strong></p>
        <% if (user.address) { %><p class="mb-0"><%= user.address %></p><% } %>
        <% if (user.contact) { %><p class="mb-0">Contact: <%= user.contact %></p><% } %>
      </div>
    </div>

    <div class="table-responsive mb-3">
      <table class="table table-striped table-hover align-middle bg-white shadow-sm">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Product</th>
            <th class="text-center">Quantity</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Line Total</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < items.length; i++) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= items[i].productName %></td>
              <td class="text-center"><%= items[i].quantity %></td>
              <td class="text-end">$<%= items[i].price.toFixed(2) %></td>
              <td class="text-end">$<%= (items[i].price * items[i].quantity).toFixed(2) %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="row justify-content-end">
      <div class="col-md-4">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between"><span>Subtotal:</span><strong>$<%= header.subtotal.toFixed(2) %></strong></div>
            <div class="d-flex justify-content-between"><span>Tax:</span><strong>$<%= header.tax.toFixed(2) %></strong></div>
            <hr>
            <div class="d-flex justify-content-between"><span>Total:</span><strong class="fs-5 text-success">$<%= header.totalAmount.toFixed(2) %></strong></div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4 d-flex flex-wrap gap-2">
      <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
      <a href="/" class="btn btn-outline-secondary">Back to Home</a>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>