<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Choose Payment Method</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-4">
    <div class="page-header mb-3">
      <div>
        <h2 class="mb-1">Choose Payment Method</h2>
        <p class="text-muted mb-0">Select how you would like to pay for your order.</p>
      </div>
      <div>
        <a href="/cart" class="btn btn-outline-secondary btn-sm">Back to cart</a>
      </div>
    </div>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg) { %>
          <p class="mb-0"><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <div class="row g-3 cs-animate" data-animate-delay="1">
      <div class="col-lg-7">
        <div class="card shadow-sm border-0 cs-animate" data-animate-delay="1">
          <div class="card-body">
            <h5 class="card-title mb-3">Payment Options</h5>

            <form method="POST" action="/payment">
              <div class="list-group mb-3">
                <label class="list-group-item d-flex gap-3 align-items-center">
                  <input class="form-check-input" type="radio" name="paymentMethod" value="Card"
                         <%= selectedMethod === 'Card' ? 'checked' : '' %> required>
                  <div>
                    <div class="fw-semibold">Credit / Debit Card</div>
                    <small class="text-muted">Visa, MasterCard, AMEX</small>
                  </div>
                </label>

                <label class="list-group-item d-flex gap-3 align-items-center">
                  <input class="form-check-input" type="radio" name="paymentMethod" value="PayNow"
                         <%= selectedMethod === 'PayNow' ? 'checked' : '' %>>
                  <div>
                    <div class="fw-semibold">PayNow / QR</div>
                    <small class="text-muted">Instant transfer via bank app</small>
                  </div>
                </label>

                <label class="list-group-item d-flex gap-3 align-items-center">
                  <input class="form-check-input" type="radio" name="paymentMethod" value="GrabPay"
                         <%= selectedMethod === 'GrabPay' ? 'checked' : '' %>>
                  <div>
                    <div class="fw-semibold">GrabPay</div>
                    <small class="text-muted">Pay using Grab wallet</small>
                  </div>
                </label>

                <label class="list-group-item d-flex gap-3 align-items-center">
                  <input class="form-check-input" type="radio" name="paymentMethod" value="Cash"
                         <%= selectedMethod === 'Cash' ? 'checked' : '' %>>
                  <div>
                    <div class="fw-semibold">Cash on Delivery</div>
                    <small class="text-muted">Pay when items arrive</small>
                  </div>
                </label>
              </div>

              <div class="d-flex justify-content-between">
                <a href="/cart" class="btn btn-outline-secondary">Back to Cart</a>
                <button class="btn btn-success">Confirm & Pay</button>
              </div>
            </form>

          </div>
        </div>
      </div>

      <div class="col-lg-5">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title mb-3">Order Summary</h5>

            <div class="table-responsive" style="max-height: 320px; overflow:auto;">
              <table class="table table-sm align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Item</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% cart.forEach(function(item){ %>
                    <tr>
                      <td><%= item.productName %></td>
                      <td class="text-center"><%= item.quantity %></td>
                      <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <hr>
            <div class="d-flex justify-content-between"><span>Subtotal:</span><strong>$<%= Number(subtotal).toFixed(2) %></strong></div>
            <div class="d-flex justify-content-between"><span>Tax:</span><strong>$<%= Number(tax).toFixed(2) %></strong></div>
            <hr>
            <div class="d-flex justify-content-between"><span>Total:</span><strong class="fs-5 text-success">$<%= Number(totalAmount).toFixed(2) %></strong></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>