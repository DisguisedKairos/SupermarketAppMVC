<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>UnFairPrice - Wishlist</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Your Wishlist</h2>
      <a href="/shopping" class="btn btn-outline-secondary btn-sm">Back to Shop</a>
    </div>

    <% if (!items || items.length === 0) { %>
      <div class="alert alert-info">
        Your wishlist is empty. Browse the shop and click the heart icon to save items here.
      </div>
    <% } else { %>
      <div class="row g-3">
        <% items.forEach(function(item) { %>
          <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
              <% if (item.image) { %>
                <img src="/images/<%= item.image %>" class="card-img-top" alt="<%= item.productName %>">
              <% } else { %>
                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 180px;">
                  <span class="text-muted small">No image</span>
                </div>
              <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= item.productName %></h5>
                <p class="mb-1">
                  <span class="badge bg-info text-dark"><%= item.category || 'General' %></span>
                </p>
                <p class="mb-1">
                  <% if (item.quantity <= 0) { %>
                    <span class="badge bg-secondary">Out of stock</span>
                  <% } else if (item.quantity <= 5) { %>
                    <span class="badge bg-warning text-dark">Low stock</span>
                  <% } else { %>
                    <span class="badge bg-success">In stock</span>
                  <% } %>
                </p>
                <p class="fw-bold fs-5 text-success mb-3">$<%= Number(item.price).toFixed(2) %></p>

                <div class="mt-auto d-flex justify-content-between align-items-center gap-2">
                  <% if (item.quantity > 0) { %>
                    <form action="/cart/add/<%= item.productId %>" method="POST" class="d-flex align-items-center">
                      <input type="number" name="quantity" min="1" max="<%= item.quantity %>" value="1"
                             class="form-control form-control-sm me-2" style="width: 80px;">
                      <button type="submit" class="btn btn-sm btn-primary">Add to Cart</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted small">Unavailable</span>
                  <% } %>
                  <form action="/wishlist/remove/<%= item.productId %>" method="POST">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
