<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Register - UnFairPrice</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-5">
    <div class="page-header mb-4">
      <div>
        <h2 class="mb-1">Create an account</h2>
      </div>
    </div>
    <div class="row justify-content-center cs-animate" data-animate-delay="1">
      <div class="col-md-6">
        <div class="card shadow-sm border-0 cs-animate" data-animate-delay="1">
          <div class="card-body">
            <h2 class="card-title mb-4 text-center">Create an Account</h2>

            <% if (errors && errors.length > 0) { %>
              <div class="alert alert-danger">
                <% errors.forEach(function(err) { %>
                  <p class="mb-0"><%= err %></p>
                <% }); %>
              </div>
            <% } %>

            <form action="/register" method="POST">
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required value="<%= (formData && formData.username) || '' %>">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required value="<%= (formData && formData.email) || '' %>">
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Address (optional)</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= (formData && formData.address) || '' %>">
              </div>
              <div class="mb-3">
                <label for="contact" class="form-label">Contact (optional)</label>
                <input type="text" class="form-control" id="contact" name="contact" value="<%= (formData && formData.contact) || '' %>">
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required minlength="6">
              </div>
              <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6">
              </div>
              <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select class="form-select" id="role" name="role">
                  <option value="customer" <%= (formData && formData.role === 'customer') ? 'selected' : '' %>>Customer</option>
                  <option value="admin" <%= (formData && formData.role === 'admin') ? 'selected' : '' %>>Admin</option>
                </select>
              </div>
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Register</button>
                <a href="/login" class="btn btn-outline-secondary">Back to Login</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>