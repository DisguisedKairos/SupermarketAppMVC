<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Product Details - UnFairPrice</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-4">
    <div class="page-header mb-3">
      <div>
        <h2 class="mb-1"><%= product.productName %></h2>
        <% if (product.description) { %>
          <p class="text-muted mb-0"><%= product.description %></p>
        <% } else { %>
          <p class="text-muted mb-0">Detailed view of this item.</p>
        <% } %>
      </div>
      <div>
        <a href="/shopping" class="btn btn-outline-secondary btn-sm">Back to shop</a>
      </div>
    </div>
    <div class="row justify-content-center cs-animate" data-animate-delay="1">
      <div class="col-md-6">
        <div class="card shadow-sm border-0 cs-animate" data-animate-delay="1">
          <% if (product.image) { %>
            <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>" style="max-height: 280px; object-fit: cover;">
          <% } %>
          <div class="card-body">
            <h2 class="card-title mb-2"><%= product.productName %></h2>
              <p class="mb-2"><strong>Category:</strong> <%= product.category || 'General' %></p>
            <p class="text-muted mb-2">Product ID: <%= product.id %></p>
            <p class="mb-2"><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
            <p class="mb-3">
              <strong>In stock:</strong>
              <% if (product.quantity > 0) { %>
                <span class="badge bg-success"><%= product.quantity %> available</span>
              <% } else { %>
                <span class="badge bg-secondary">Out of stock</span>
              <% } %>
            </p>

            <% if (product.quantity > 0) { %>
              <form action="/cart/add/<%= product.id %>" method="POST" class="d-flex align-items-center mb-3">
                <label for="quantity" class="me-2 mb-0">Quantity:</label>
                <input type="number" id="quantity" name="quantity" class="form-control me-2" style="width: 90px;" min="1" max="<%= product.quantity %>" value="1">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
              </form>
            <% } %>

            <a href="/shopping" class="btn btn-secondary">Back to Shop</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>