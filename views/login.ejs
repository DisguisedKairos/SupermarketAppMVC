<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storage–style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Login - UnFairPrice</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-5">
    <div class="page-header mb-4">
      <div>
        <h2 class="mb-1">Login</h2>
        <p class="text-muted mb-0">Access your UnFairPrice account to start shopping or manage inventory.</p>
      </div>
    </div>
    <div class="row justify-content-center cs-animate" data-animate-delay="1">
      <div class="col-md-5">

    <div class="card shadow-sm border-0 cs-animate" data-animate-delay="1">
          
      <div class="text-center mb-4">
        <img src="/images/unfairprice-logo.png" alt="UnFairPrice logo" class="hero-logo mb-2">
        <p class="text-muted mb-0">Welcome to UnFairPrice — your modern supermarket experience.</p>
      </div>

    <div class="card-body">
            <h2 class="card-title mb-4 text-center">Login</h2>

            <% if (errors && errors.length > 0) { %>
              <div class="alert alert-danger">
                <% errors.forEach(function(err) { %>
                  <p class="mb-0"><%= err %></p>
                <% }); %>
              </div>
            <% } %>

            <% if (messages && messages.length > 0) { %>
              <div class="alert alert-success">
                <% messages.forEach(function(msg) { %>
                  <p class="mb-0"><%= msg %></p>
                <% }); %>
              </div>
            <% } %>

            <form action="/login" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required minlength="4">
              </div>
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="/register" class="btn btn-outline-secondary">Create an account</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>