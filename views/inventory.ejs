<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storage–style theme -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>UnFairPrice - Inventory</title>
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Inventory</h2>
      <a href="/addProduct" class="btn btn-success">+ Add Product</a>
    </div>

    <form method="GET" action="/inventory" class="row g-2 mb-3 p-3 bg-white shadow-sm rounded align-items-end">
      <div class="col-md-4">
        <label class="form-label">Search</label>
        <input type="text" name="q" value="<%= search || '' %>" class="form-control" placeholder="Search by product name">
      </div>

      <div class="col-md-2">
        <label class="form-label">Category</label>
        <select name="category" class="form-select">
          <option value="all" <%= category === 'all' ? 'selected' : '' %>>All Categories</option>
          <% if (categories && categories.length) { %>
            <% categories.forEach(function(cat) { %>
              <option value="<%= cat %>" <%= category === cat ? 'selected' : '' %>><%= cat %></option>
            <% }); %>
          <% } %>
        </select>
      </div>

      <div class="col-md-2">
        <label class="form-label">Sort By</label>
        <select name="sort" class="form-select">
          <option value="id" <%= sort === 'id' ? 'selected' : '' %>>Newest</option>
          <option value="productName" <%= sort === 'productName' ? 'selected' : '' %>>Name</option>
          <option value="category" <%= sort === 'category' ? 'selected' : '' %>>Category</option>
          <option value="quantity" <%= sort === 'quantity' ? 'selected' : '' %>>Quantity</option>
          <option value="price" <%= sort === 'price' ? 'selected' : '' %>>Price</option>
        </select>
      </div>

      <div class="col-md-2">
        <label class="form-label">Direction</label>
        <select name="dir" class="form-select">
          <option value="desc" <%= dir === 'desc' ? 'selected' : '' %>>Descending</option>
          <option value="asc" <%= dir === 'asc' ? 'selected' : '' %>>Ascending</option>
        </select>
      </div>

      <div class="col-md-2">
        <div class="form-check mt-4">
          <input class="form-check-input" type="checkbox" value="1" id="invInStock" name="inStock" <%= inStockOnly ? 'checked' : '' %>>
          <label class="form-check-label" for="invInStock">In-stock only</label>
        </div>
      </div>

      <div class="col-12 text-end mt-2">
        <button type="submit" class="btn btn-primary me-2">Apply</button>
        <a href="/inventory" class="btn btn-outline-secondary">Reset</a>
      </div>
    </form>

    <% if (!products || products.length === 0) { %>
      <div class="alert alert-info">No products found.</div>
    <% } else { %>
      <% if (lowStockCount && lowStockCount > 0) { %>
        <div class="alert alert-warning d-flex align-items-center mb-3">
          <div>
            <strong><%= lowStockCount %></strong> product(s) are low in stock (≤ <%= lowStockThreshold %> units).
            Please review and restock soon.
          </div>
        </div>
      <% } %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle bg-white shadow-sm">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Product</th>
              <th>Category</th>
              <th>Image</th>
              <th class="text-center">Quantity</th>
              <th class="text-end">Price</th>
              <th class="text-center" colspan="2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < products.length; i++) { %>
              <tr class="<%= products[i].quantity <= 0 ? 'table-danger' : (products[i].quantity <= lowStockThreshold ? 'table-warning' : '') %>">
                <td><%= products[i].id %></td>
                <td><%= products[i].productName %></td>
                <td><%= products[i].category || 'General' %></td>
                <td>
                  <% if (products[i].image) { %>
                    <img src="/images/<%= products[i].image %>" alt="<%= products[i].productName %>" style="width: 80px; height: 80px; object-fit: cover;">
                  <% } else { %>
                    <span class="text-muted">No image</span>
                  <% } %>
                </td>
                <td class="text-center">
                  <%= products[i].quantity %>
                  <% if (products[i].quantity <= 0) { %>
                    <span class="badge bg-danger ms-1">Out of stock</span>
                  <% } else if (products[i].quantity <= lowStockThreshold) { %>
                    <span class="badge bg-warning text-dark ms-1">Low stock</span>
                  <% } %>
                </td>
                <td class="text-end">$<%= Number(products[i].price).toFixed(2) %></td>
                <td class="text-center">
                  <a href="/editProduct/<%= products[i].id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
                <td class="text-center">
                  <a href="/deleteProduct/<%= products[i].id %>" class="btn btn-sm btn-outline-danger"
                     onclick="return confirm('Delete this product?');">Delete</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
  <script src="/js/main.js"></script>
</body>
</html>