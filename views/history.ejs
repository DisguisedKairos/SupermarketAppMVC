<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Purchase History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Cold Storageâ€“style theme -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <%- include("partials/navbar") %>

<div class="container my-4">
    <div class="page-header mb-3">
      <div>
        <h2 class="mb-1">Purchase History</h2>
        <p class="text-muted mb-0">View all your completed orders and open their invoices.</p>
      </div>
      <div>
        <a href="/shopping" class="btn btn-outline-secondary btn-sm">Back to shop</a>
      </div>
    </div>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(msg) { %>
          <p class="mb-0"><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(msg) { %>
          <p class="mb-0"><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (!invoices || invoices.length === 0) { %>
      <div class="alert alert-info">
        You have not completed any purchases yet.
      </div>
    <% } else { %>
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
              <thead>
                <tr>
                  <th>Invoice ID</th>
                  <th>Date</th>
                  <th class="text-end">Subtotal ($)</th>
                  <th class="text-end">Tax ($)</th>
                  <th class="text-end">Total ($)</th>
                  <th class="text-center">Action</th>
                </tr>
              </thead>
              <tbody>
                <% invoices.forEach(function(inv) { %>
                  <tr>
                    <td>#<%= inv.id %></td>
                    <td><%= inv.createdAt || '' %></td>
                    <td class="text-end"><%= Number(inv.subtotal).toFixed(2) %></td>
                    <td class="text-end"><%= Number(inv.tax).toFixed(2) %></td>
                    <td class="text-end fw-semibold text-success"><%= Number(inv.totalAmount).toFixed(2) %></td>
                    <td class="text-center">
                      <a href="/invoice/<%= inv.id %>" class="btn btn-sm btn-primary">View</a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>