<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Purchase History - UnFairPrice</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <%- include('partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <% if (typeof viewedUserId !== 'undefined' && viewedUserId) { %>
          <h2 class="mb-0">Purchase History for User ID <%= viewedUserId %></h2>
          <p class="text-muted mb-0">Viewing as admin.</p>
        <% } else { %>
          <h2 class="mb-0">My Purchase History</h2>
          <p class="text-muted mb-0">All your past orders in one place.</p>
        <% } %>
      </div>
    </div>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(e) { %>
          <div><%= e %></div>
        <% }) %>
      </div>
    <% } %>

    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(m) { %>
          <div><%= m %></div>
        <% }) %>
      </div>
    <% } %>

    <div class="card shadow-sm border-0">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Invoice ID</th>
                <th scope="col">Subtotal</th>
                <th scope="col">Tax</th>
                <th scope="col">Total</th>
                <th scope="col">Created At</th>
              </tr>
            </thead>
            <tbody>
              <% if (invoices && invoices.length) { %>
                <% invoices.forEach(function(inv, index) { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= inv.id %></td>
                    <td>$<%= (inv.subtotal || inv.totalAmount || 0).toFixed ? inv.subtotal.toFixed(2) : inv.subtotal %></td>
                    <td>$<%= (inv.tax || 0).toFixed ? inv.tax.toFixed(2) : inv.tax %></td>
                    <td>$<%= (inv.totalAmount || 0).toFixed ? inv.totalAmount.toFixed(2) : inv.totalAmount %></td>
                    <td><%= inv.createdAt %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center py-4">
                    No invoices found.
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
